<table class="table table-cv table-sm table-borderless table-responsive table-cv-map" style="margin: 1rem; padding-right:1rem">
  {% assign skip_basics = 'image,profiles,location' | split: ',' %}
  {% for content in data[1] %}
    {%
      if (content[1] == "") or (skip_basics contains
      content[0])
    %}
      {% continue %}
    {% endif %}

    <tr>
      <td class="p-1 pr-2 font-weight-bold col-2">
        <b>{{ content[0] | capitalize }}</b>
      </td>
      <td class="p-1 pl-2 font-weight-light text col-10" style="padding-right=1rem">
        {% if content[0] == 'url' %}
          <a href="{{ content[1] }}" target="_blank" rel="noopener noreferrer">{{ content[1] }}</a>
        {% elsif content[0] == 'email' %}
          <a href="mailto:{{ content[1] }}" target="_blank">{{ content[1] }}</a>
        {% elsif content[0] == 'phone' %}
          <a href="tel:{{ content[1] }}">{{ content[1] }}</a>
        {% else %}
          {{ content[1] }}
        {% endif %}
      </td>
    </tr>
  {% endfor %}
</table>
